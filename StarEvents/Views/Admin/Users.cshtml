@model IEnumerable<StarEvents.Models.User>
@{
    ViewData["Title"] = "Manage Users";
}
<h2>Manage Users</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <p>Manage all users in the system</p>
    <a asp-action="Create" class="btn btn-primary">Add New User</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <span class="badge bg-@(user.Role == "Admin" ? "danger" : user.Role == "Organizer" ? "warning" : "primary")">
                            @user.Role
                        </span>
                    </td>
                    <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-outline-danger" 
                               onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <h4>No Users Found</h4>
        <p>There are currently no users in the system. <a asp-action="Create">Create the first user</a> to get started.</p>
    </div>
}

<p class="mt-4 text-muted">
    <small><strong>Note:</strong> Use the Edit function to modify user details including password changes. All user management operations including password updates can be performed through the edit modal.</small>
</p>
