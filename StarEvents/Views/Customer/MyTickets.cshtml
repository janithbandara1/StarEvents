@model List<StarEvents.Models.Ticket>
@{
    ViewData["Title"] = "My Tickets";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarEvents</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StarEvents.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }
        .ticket-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            height: 100%;
        }
        .ticket-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        .qr-code {
            max-width: 150px;
            max-height: 150px;
        }
        .ticket-status {
            font-weight: bold;
        }
        .ticket-status.purchased {
            color: #28a745;
        }
        .no-tickets {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">
                <i class="bi bi-star-fill me-2"></i>StarEvents
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Customer")">
                            <i class="bi bi-house-door me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("MyTickets", "Customer")">
                            <i class="bi bi-ticket-perforated me-1"></i>My Tickets
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i>Account
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("Logout", "Users")">
                                <i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-ticket-perforated me-2"></i>My Tickets</h2>
            <a href="@Url.Action("Dashboard", "Customer")" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Buy More Tickets
            </a>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var ticket in Model)
                {
                    <div class="col-lg-6 col-md-6 mb-4">
                        <div class="card ticket-card border-0 shadow-sm">
                            <div class="card-body d-flex">
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <h5 class="card-title mb-0">@ticket.Event.Title</h5>
                                        <span class="ticket-status purchased">@ticket.Status</span>
                                    </div>
                                    <p class="card-text text-muted mb-2">@ticket.Event.Description</p>
                                    <div class="row mb-2">
                                        <div class="col-sm-6">
                                            <small class="text-muted">
                                                <i class="bi bi-calendar-check me-1"></i>
                                                @ticket.Event.EventDate.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                        <div class="col-sm-6">
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i>
                                                @ticket.Event.EventDate.ToString("h:mm tt")
                                            </small>
                                        </div>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="bi bi-geo-alt me-1"></i>@ticket.Event.Location
                                        </small>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="text-success fw-bold">$@ticket.PricePaid.ToString("0.00")</span>
                                        <small class="text-muted">Purchased: @ticket.PurchaseDate.ToString("MMM dd, yyyy")</small>
                                    </div>
                                </div>
                                <div class="ms-3 text-center">
                                    @if (!string.IsNullOrEmpty(ticket.QRCode))
                                    {
                                        <img src="data:image/png;base64,@ticket.QRCode" alt="QR Code" class="qr-code img-fluid border">
                                        <small class="text-muted d-block mt-1">E-Ticket</small>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-tickets">
                <i class="bi bi-ticket-perforated display-1 text-muted mb-3"></i>
                <h4>No Tickets Yet</h4>
                <p class="mb-3">You haven't purchased any tickets yet. Start exploring events!</p>
                <a href="@Url.Action("Dashboard", "Customer")" class="btn btn-primary">
                    <i class="bi bi-search me-2"></i>Browse Events
                </a>
            </div>
        }
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>