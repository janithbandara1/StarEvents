@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!-- Side Navbar -->
<nav class="flex-shrink-0 p-3 bg-dark text-light d-flex flex-column" style="width: 250px; height: 100vh; position: sticky; top: 0;">
    <div class="flex-grow-1">
        <h4 class="mb-4">Admin</h4>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a class="nav-link text-light @(currentAction == "Dashboard" ? "active" : "")" id="menu-dashboard" href="@Url.Action("Dashboard", "Admin")#dashboard">
                    <i class="bi bi-house-door me-2"></i>Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" id="menu-users" href="@Url.Action("Dashboard", "Admin")#users">
                    <i class="bi bi-people me-2"></i>Manage Users
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" id="menu-discounts" href="@Url.Action("Dashboard", "Admin")#discounts">
                    <i class="bi bi-percent me-2"></i>Manage Discounts
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light @(currentAction == "Profile" ? "active" : "")" id="menu-profile" href="@Url.Action("Profile", "Admin")">
                    <i class="bi bi-person me-2"></i>My Profile
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" id="menu-sales-report" href="@Url.Action("Dashboard", "Admin")#sales-report">
                    <i class="bi bi-graph-up me-2"></i>Sales Report
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" id="menu-users-report" href="@Url.Action("Dashboard", "Admin")#users-report">
                    <i class="bi bi-people me-2"></i>Users Report
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" id="menu-events-report" href="@Url.Action("Dashboard", "Admin")#events-report">
                    <i class="bi bi-calendar-event me-2"></i>Events Report
                </a>
            </li>
        </ul>
    </div>
    <!-- Logout Button at Bottom -->
    <div class="mt-auto pt-3 border-top">
        <a href="@Url.Action("Logout", "Users")" class="btn btn-danger w-100">
            <i class="bi bi-box-arrow-right me-2"></i>Logout
        </a>
    </div>
</nav>
